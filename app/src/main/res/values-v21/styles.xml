<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LightTest" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorPrimary">#0D47A1</item>
        <item name="android:colorBackground">#393e44</item>
        <item name="colorAccent">#0D47A1</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorSecondaryInverse">@android:color/white</item>
        <item name="android:colorForeground">@android:color/black</item>
        <item name="android:windowBackground">@color/background_colour</item>
        <item name="android:statusBarColor">#1976d2</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:buttonStyle">@style/buttonStyleBlue</item>
    </style>

    <style name="buttonStyleBlue" parent="@android:style/Widget.Button">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OrangeTheme" parent="LightTest">
        <item name="colorPrimary">@android:color/holo_orange_dark</item>
        <item name="colorAccent">@android:color/holo_orange_dark</item>
        <item name="android:statusBarColor">@android:color/holo_orange_light</item>
        <item name="android:buttonStyle">@style/buttonStyleOrange</item>

    </style>

    <style name="buttonStyleOrange" parent="@android:style/Widget.Button">
        <item name="android:background">@color/yellowColor</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RedTheme" parent="OrangeTheme">
        <item name="colorPrimary">@android:color/holo_red_dark</item>
        <item name="colorAccent">@android:color/holo_red_dark</item>
        <item name="android:statusBarColor">@android:color/holo_red_light</item>
        <item name="android:buttonStyle">@style/buttonStyleRed</item>

    </style>

    <style name="buttonStyleRed" parent="@android:style/Widget.Button">
        <item name="android:background">@color/redColor</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GreenTheme" parent="LightTest">
        <item name="colorPrimary">@android:color/holo_green_dark</item>
        <item name="colorAccent">@android:color/holo_green_dark</item>
        <item name="android:statusBarColor">@android:color/holo_green_dark</item>
        <item name="android:buttonStyle">@style/buttonStyleGreen</item>

    </style>

    <style name="buttonStyleGreen" parent="@android:style/Widget.Button">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/greenColor</item>
    </style>

    <style name="YellowTheme" parent="LightTest">
        <item name="colorPrimary">#FFD700</item>
        <item name="colorAccent">#FFD700</item>
        <item name="android:statusBarColor">#FFD700</item>
        <item name="android:buttonStyle">@style/buttonStyleYellow</item>
    </style>

    <style name="buttonStyleYellow" parent="@android:style/Widget.Button">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/yellowColor</item>
    </style>
</resources>